<%- include('home_header') %>

<div class="hero user-hero">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="hero-ct">
					<h1>Edward kennedyâ€™s profile</h1>
					<ul class="breadcumb">
